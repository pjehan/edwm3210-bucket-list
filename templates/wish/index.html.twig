{% extends 'base.html.twig' %}

{% block title %}Liste des souhaits{% endblock %}

{% block body %}
    <h1>Liste des souhaits</h1>

    <ul>
        {% for wish in wishes %}
            <li>
                <h2>{{ wish.title }}</h2>
                <p>Auteur : {{ wish.author }}</p>
                <p>Categorie : {{ wish.category.name }}</p>
                <a href="{{ path('app_wish_show', {'id': wish.id}) }}" class="btn btn-primary">Voir le d√©tail</a>
                <a href="{{ path('app_wish_edit', {'id': wish.id}) }}" class="btn btn-warning">Modifier</a>
            </li>
        {% endfor %}
    </ul>

{% endblock %}
